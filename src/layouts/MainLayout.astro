---
import "../styles/global.css";
interface Props {
  title?: string;
}

const { title = "Healthy Meal" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-100 text-gray-900 flex flex-col min-h-screen">
    <header class="p-4 bg-white shadow">
      <nav class="container mx-auto flex flex-col sm:flex-row justify-between items-center">
        <a href="/" class="text-xl font-bold mb-4 sm:mb-0">HealthyMeal</a>
        <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-4 w-full sm:w-auto">
          <a href="/auth/register" class="bg-black hover:bg-gray-900 text-white px-4 py-2 rounded text-center"
            >Rejestracja</a
          >
          <a href="/auth/login" class="border border-black hover:bg-gray-100 px-4 py-2 rounded text-center">Logowanie</a
          >
        </div>
      </nav>
    </header>
    <main class="flex-1 container mx-auto p-4">
      <slot />
    </main>
    <footer class="p-4 bg-white shadow mt-8">
      <div class="container mx-auto text-center">
        &copy; {new Date().getFullYear()} HealthyMeal. Wszelkie prawa zastrze≈ºone.
      </div>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
